{
  "name": "vg-assignment",
  "version": "1.0.0",
  "author": "Oscar Andersson",
  "repository": "https://github.com/lordoscarr/vg-assignment",
  "homepage": "https://lordoscarr.github.io/vg-assignment/",
  "description": "Simple tool to see how the Bitcoin currency stands against the US dollar.",
  "license": "GPL-3.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "chart.js": "^2.8.0",
    "gh-pages": "^2.0.1",
    "mocha": "^6.1.4",
    "moment": "^2.24.0",
    "nyc": "^14.1.1",
    "react": "^16.8.6",
    "react-chartjs-2": "^2.7.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "CI=true react-scripts test --env=jsdom",
    "test:coverage": "npm test -- --coverage",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",

    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
